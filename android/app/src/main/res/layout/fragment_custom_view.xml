<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="HOOK"
            android:textColor="@color/colorPrimary" />

        <me.jim.wx.awesomebasicpractice.anim.SlideTipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/drawable_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:contentDescription="用来测试各种Drawable" />

        <me.jim.wx.awesomebasicpractice.anim.ExpandAnimView
            android:id="@+id/expand_anim_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radiobutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_rb"
            android:button="@null"
            android:checked="false" />

        <TextureView
            android:id="@+id/textureview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <me.jim.wx.awesomebasicpractice.widget.commentview.CommentsBar
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent" />

            <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent" />

            <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent" />

            <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent" />

            <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent" />

        </me.jim.wx.awesomebasicpractice.widget.commentview.CommentsBar>

        <me.jim.wx.awesomebasicpractice.widget.commentview.TriangleView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_ring" />

        <me.jim.wx.awesomebasicpractice.view.primary.HexagonImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_default_1" />

        <me.jim.wx.awesomebasicpractice.view.primary.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <me.jim.wx.awesomebasicpractice.view.abc.VDHLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#44ff0000"
                android:gravity="center"
                android:text="I can be dragged !" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#44ff0000"
                android:gravity="center"
                android:text="I can be dragged !" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#44ff0000"
                android:gravity="center"
                android:text="I can be dragged !" />

        </me.jim.wx.awesomebasicpractice.view.abc.VDHLayout>

        <me.jim.wx.awesomebasicpractice.view.abc.CustomViewGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="#FF12"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="#667"
                android:gravity="center"
                android:text="3" />

        </me.jim.wx.awesomebasicpractice.view.abc.CustomViewGroup>

        <me.jim.wx.awesomebasicpractice.view.abc.CustomVoiceAdjust
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <me.jim.wx.awesomebasicpractice.view.abc.CustomTitleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" />

        <me.jim.wx.awesomebasicpractice.view.abc.CustomCircleBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</ScrollView>
